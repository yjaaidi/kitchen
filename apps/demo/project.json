{
  "name": "demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "demo",
  "sourceRoot": "apps/demo/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/demo",
        "index": "{projectRoot}/src/index.html",
        "browser": "{projectRoot}/src/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "assets": ["{projectRoot}/src/favicon.ico", "{projectRoot}/src/assets"],
        "styles": ["{projectRoot}/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "demo:build:production"
        },
        "development": {
          "buildTarget": "demo:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "demo:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "angular-cli-karma": {
      "executor": "@angular/build:unit-test",
      "options": {
        "runner": "karma",
        "watch": false
      }
    },
    "angular-cli-vitest": {
      "executor": "@angular/build:unit-test"
    },
    "jest": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "tsConfig": "apps/demo/tsconfig.spec.json"
      }
    },
    "jest-swc": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest-swc.config.ts",
        "tsConfig": "apps/demo/tsconfig.spec.json"
      }
    },
    "vitest-forks": {
      "command": "vitest --config {projectRoot}/vitest.config.ts --pool forks --watch false"
    },
    "vitest-threads": {
      "command": "vitest --config {projectRoot}/vitest.config.ts --pool threads --watch false"
    },
    "vitest-vmforks": {
      "command": "vitest --config {projectRoot}/vitest.config.ts --pool vmForks --watch false"
    },
    "vitest-threads-no-isolate": {
      "command": "vitest --config {projectRoot}/vitest.config.ts --pool threads --no-isolate --watch false"
    },
    "vitest-swc-vmforks": {
      "command": "vitest --config {projectRoot}/vitest-swc.config.ts --pool vmForks --watch false"
    },
    "vitest-swc-threads-no-isolate": {
      "command": "vitest --config {projectRoot}/vitest-swc.config.ts --pool threads --no-isolate --watch false"
    },
    "vitest-aot-vmforks": {
      "command": "vitest --config {projectRoot}/vitest-aot.config.ts --pool vmForks --watch false"
    },
    "vitest-aot-threads-no-isolate": {
      "command": "vitest --config {projectRoot}/vitest-aot.config.ts --pool threads --no-isolate --watch false"
    }
  }
}
